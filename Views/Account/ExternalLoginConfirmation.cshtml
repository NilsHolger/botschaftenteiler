@model MessageSharer.Models.RegisterExternalLoginModel
@{
    ViewBag.Title = "Registrieren";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Assoziere Dein @ViewBag.ProviderDisplayName Konto.</h2>
</hgroup>

@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Assozierungs Form</legend>
        <p>
            Sie sind erfolgreich authentifiziert mit <strong>@ViewBag.ProviderDisplayName</strong>.
           Nutzernamen für diese Site eingeben und auf Registrieren Clicken.
        </p>
        <ol>
            <li class="name">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
        </ol>
        @Html.HiddenFor(m => m.ExternalLoginData)
        <input type="submit" value="Registrieren" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
